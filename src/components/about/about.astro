<script is:inline>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Select the elements
    const playButton = document.querySelector('.about__bg .play'); // Make selector specific
    const videoPopup = document.getElementById('videoPopup');
    const videoPlayer = document.getElementById('popupVideoPlayer');
    const closeTriggers = document.querySelectorAll('[data-close-popup]'); // Select close button and overlay

    // Check if all elements exist
    if (!playButton) {
        console.warn("Video play button (.about__bg .play) not found.");
        return;
    }
    if (!videoPopup) {
        console.error("Video popup container (#videoPopup) not found.");
        return;
    }
     if (!videoPlayer) {
        console.error("Video player element (#popupVideoPlayer) not found.");
        return;
    }
     if (closeTriggers.length === 0) {
        console.warn("Video popup close triggers ([data-close-popup]) not found.");
        // You could still proceed but closing might not work
    }


    // Function to open the popup
    const openPopup = () => {
      if (videoPopup && videoPlayer) {
        videoPopup.classList.remove('hidden');
        videoPopup.focus(); // Focus the popup for accessibility
        videoPlayer.play().catch(error => {
          console.log("Autoplay was prevented by the browser:", error);
          // Video will load but might not play automatically depending on browser policy
        });
      }
    };

    // Function to close the popup
    const closePopup = () => {
      if (videoPopup && videoPlayer) {
        videoPopup.classList.add('hidden');
        videoPlayer.pause();
        videoPlayer.currentTime = 0; // Reset video to the start
        playButton?.focus(); // Return focus to the button that opened it
      }
    };

    // Event listener for the play button
    playButton.addEventListener('click', (event) => {
      event.preventDefault(); // Prevent any default button behavior
      openPopup();
    });

    // Event listeners for close triggers (button and overlay)
    closeTriggers.forEach(trigger => {
      trigger.addEventListener('click', () => {
        closePopup();
      });
    });

    // Event listener for the Escape key
    document.addEventListener('keydown', (event) => {
      // Check if the popup is visible and the Escape key was pressed
      if (event.key === 'Escape' && !videoPopup.classList.contains('hidden')) {
        closePopup();
      }
    });
  });
</script>
